@{
}
<h3>Course List</h3>
<p>
    @Html.ActionLink("Add New", "Create", "Course")
</p>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Fees</th>
        <th>Action</th>
    </tr>
    @foreach (SQLConnectionMVC.Models.Course course in ViewBag.CourseList)
    {
        <tr>
            <td>@course.Id</td>
            <td>@course.CourseName</td>
            <td>@course.CourseFees</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = course.Id })
                @Html.ActionLink("Delete", "Delete", new { @id = course.Id })
            </td>
        </tr>
    }
</table>
